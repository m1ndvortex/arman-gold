{
  "name": "jeweler-backend",
  "version": "1.0.0",
  "description": "Backend API for Jeweler SaaS Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db": "node scripts/db-setup.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "npx ts-node src/database/seeds.ts",
    "db:test": "npx ts-node src/database/test-connection.ts",
    "db:clear": "npx ts-node src/database/seeds.ts clear",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "redis:test": "npx ts-node src/scripts/test-redis.ts",
    "auth:verify": "npx ts-node src/scripts/verify-auth-system.ts",
    "auth:test": "jest src/tests/auth.test.ts --runInBand"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "prisma": "^5.2.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/speakeasy": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
